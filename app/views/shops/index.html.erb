<div>
  <div>
    <h1>
      List of all shops
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new shop
    </h2>

    <form action="/insert_shop" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="text" id="website_box" name="query_website">
      </div>

      <div>
        <label for="logo_box">
          Logo
        </label>

        <input type="text" id="logo_box" name="query_logo">
      </div>

      <button>
        Create shop
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Website
        </th>

        <th>
          Logo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_shops.each do |a_shop| %>
      <tr>
        <td>
          <%= a_shop.id %>
        </td>

        <td>
          <%= a_shop.name %>
        </td>

        <td>
          <%= a_shop.address %>
        </td>

        <td>
          <%= a_shop.website %>
        </td>

        <td>
          <%= a_shop.logo %>
        </td>

        <td>
          <%= time_ago_in_words(a_shop.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_shop.updated_at) %> ago
        </td>

        <td>
          <a href="/shops/<%= a_shop.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h1>
      List of all boards
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new board
    </h2>

    <form action="/insert_board" method="post">
      <div>
        <label for="model_id_box">
          Model
        </label>

        <input type="text" id="model_id_box" name="query_model_id">
      </div>

      <div>
        <label for="length_box">
          Length
        </label>

        <input type="text" id="length_box" name="query_length">
      </div>

      <div>
        <label for="width_box">
          Width
        </label>

        <input type="text" id="width_box" name="query_width">
      </div>

      <div>
        <label for="thickness_box">
          Thickness
        </label>

        <input type="text" id="thickness_box" name="query_thickness">
      </div>

      <div>
        <label for="liters_box">
          Liters
        </label>

        <input type="text" id="liters_box" name="query_liters">
      </div>

      <div>
        <label for="tail_box">
          Tail
        </label>

        <input type="text" id="tail_box" name="query_tail">
      </div>

      <div>
        <label for="fin_config_box">
          Fin config
        </label>

        <input type="text" id="fin_config_box" name="query_fin_config">
      </div>

      <div>
        <label for="fin_system_box">
          Fin system
        </label>

        <input type="text" id="fin_system_box" name="query_fin_system">
      </div>

      <div>
        <label for="construction_box">
          Construction
        </label>

        <input type="text" id="construction_box" name="query_construction">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="shop_id_box">
          Shop
        </label>

        <input type="text" id="shop_id_box" name="query_shop_id">
      </div>

      <div>
        <label for="individual_id_box">
          Individual
        </label>

        <input type="text" id="individual_id_box" name="query_individual_id">
      </div>

      <div>
        <input type="checkbox" id="owner_is_shop_box" name="query_owner_is_shop" value="1">

        <label for="owner_is_shop_box">Owner is shop</label>
      </div>

      <div>
        <label for="condition_box">
          Condition
        </label>

        <input type="text" id="condition_box" name="query_condition">
      </div>

      <div>
        <input type="checkbox" id="artwork_box" name="query_artwork" value="1">

        <label for="artwork_box">Artwork</label>
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes" rows="3"></textarea>
      </div>

      <button>
        Create board
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Model
        </th>

        <th>
          Length
        </th>

        <th>
          Width
        </th>

        <th>
          Thickness
        </th>

        <th>
          Liters
        </th>

        <th>
          Tail
        </th>

        <th>
          Fin config
        </th>

        <th>
          Fin system
        </th>

        <th>
          Construction
        </th>

        <th>
          Image
        </th>

        <th>
          Shop
        </th>

        <th>
          Individual
        </th>

        <th>
          Owner is shop
        </th>

        <th>
          Condition
        </th>

        <th>
          Artwork
        </th>

        <th>
          Price
        </th>

        <th>
          Notes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_boards.each do |a_board| %>
      <tr>
        <td>
          <%= a_board.id %>
        </td>

        <td>
          <%= a_board.model_id %>
        </td>

        <td>
          <%= a_board.length %>
        </td>

        <td>
          <%= a_board.width %>
        </td>

        <td>
          <%= a_board.thickness %>
        </td>

        <td>
          <%= a_board.liters %>
        </td>

        <td>
          <%= a_board.tail %>
        </td>

        <td>
          <%= a_board.fin_config %>
        </td>

        <td>
          <%= a_board.fin_system %>
        </td>

        <td>
          <%= a_board.construction %>
        </td>

        <td>
          <%= a_board.image %>
        </td>

        <td>
          <%= a_board.shop_id %>
        </td>

        <td>
          <%= a_board.individual_id %>
        </td>

        <td>
          <%= a_board.owner_is_shop %>
        </td>

        <td>
          <%= a_board.condition %>
        </td>

        <td>
          <%= a_board.artwork %>
        </td>

        <td>
          <%= a_board.price %>
        </td>

        <td>
          <%= a_board.notes %>
        </td>

        <td>
          <%= time_ago_in_words(a_board.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_board.updated_at) %> ago
        </td>

        <td>
          <a href="/boards/<%= a_board.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
